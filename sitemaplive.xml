function generateSitemap() {
    let sitemap = '<?xml version="1.0" encoding="UTF-8"?>\n';
    sitemap += '<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">\n';
    
    // Add homepage
    sitemap += '    <url>\n';
    sitemap += '        <loc>https://km-to-mi.github.io/</loc>\n';
    sitemap += '        <lastmod>2025-03-25</lastmod>\n';
    sitemap += '        <changefreq>monthly</changefreq>\n';
    sitemap += '        <priority>1.0</priority>\n';
    sitemap += '    </url>\n';
    
    // Generate URLs for 1 to 1000 km
    for (let i = 1; i <= 1000; i++) {
        sitemap += '    <url>\n';
        sitemap += `        <loc>https://km-to-mi.github.io/?km=${i}</loc>\n`;
        sitemap += '        <lastmod>2025-03-25</lastmod>\n';
        sitemap += '        <changefreq>monthly</changefreq>\n';
        sitemap += '        <priority>0.8</priority>\n';
        sitemap += '    </url>\n';
    }
    
    sitemap += '</urlset>';
    
    return sitemap; // Just return the XML string
}

// Log to console instead of downloading
console.log(generateSitemap());
